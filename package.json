{
  "name": "dwarvesf-react-toolkit",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "lerna run build",
    "prepublish": "lerna run prepublish",
    "start:app": "yarn run build && yarn --cwd example && yarn --cwd example start",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "format": "prettier -c --write \"*/**\"",
    "postinstall": "husky install",
    "docs": "yarn workspace @dwarvesf/react-toolkit-docs",
    "docs:build": "yarn search-meta:gen && yarn docs build",
    "docs:dev": "yarn docs dev",
    "search-meta:gen": "ts-node scripts/get-search-meta.ts",
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "boot": "yarn prestart && yarn build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,css,scss,md,svg}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@manypkg/cli": "^0.18.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/shelljs": "^0.8.9",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "4.x",
    "@typescript-eslint/parser": "4.29.0",
    "babel-eslint": "10.x",
    "eslint": "7.x",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "12.x",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react": "1.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "3.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "4.x",
    "eslint-plugin-testing-library": "4.10.1",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "markdown-toc": "^1.2.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "shelljs": "^0.8.4",
    "swr": "^1.0.0",
    "ts-node": "^10.2.1",
    "tsdx": "^0.14.1",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  }
}
